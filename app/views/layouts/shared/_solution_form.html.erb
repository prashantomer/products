<div class="form-sol">
  <%= form_tag solution_reply_welcome_index_path, class: "form-inline", method: :get, :remote => true do %>
    <%= hidden_field_tag 'solution[question_id]', que.id %>
    <div class="field">
    <h5>New Solution Here:</h5>
      <%= text_area_tag 'solution[solution]', "", class: 'form-control sol-textarea' %>
    </div><br />
    <div class="col-lg-offset-9 col-lg-3">
    	<%= submit_tag 'Post Solution', class:"btn btn-primary" %>
    </div>
  <% end %> 
</div><!-- /form --><br /><hr>